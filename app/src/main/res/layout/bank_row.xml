<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/bank_view1"
                android:layout_width="90dp"
                android:layout_height="55dp"
                app:layout_constraintEnd_toStartOf="@+id/bank_view2"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="?attr/selectableItemBackground" />

            <ImageView
                android:id="@+id/bank_view2"
                android:layout_width="90dp"
                android:layout_height="55dp"
                app:layout_constraintEnd_toStartOf="@+id/bank_view3"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="?attr/selectableItemBackground" />

            <ImageView
                android:id="@+id/bank_view3"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_marginStart="180dp"
                android:layout_marginLeft="180dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="?attr/selectableItemBackground" />

            <ImageView
                android:id="@+id/bank_view4"
                android:layout_width="90dp"
                android:layout_height="55dp"
                app:layout_constraintStart_toEndOf="@+id/bank_view3"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="?attr/selectableItemBackground" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>